
@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="tr">
<head>
    <title>Yazar Giriş Paneli</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/AdminLTE-3.1.0/writer-login-form/css/style.css" rel="stylesheet" />

</head>
<body class="img js-fullheight" style="background-image: url('/AdminLTE-3.1.0/writer-login-form/images/bg.jpg');">
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">Yazar Girişi</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap p-0">
                        @using (Html.BeginForm("writerLogin", "Login", FormMethod.Post))
                        {
                            <div class="form-group">
                                <input type="text" name="WriterUserName" class="form-control" placeholder="Kullanıcı Adı" required>
                            </div>
                            <div class="form-group">
                                <input id="password-field" type="password" name="WriterPassword" class="form-control" placeholder="Şifre" required>
                                <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary submit px-3">Giriş Yap</button>
                            </div>
                            <div class="form-group d-md-flex">
                                <div class="w-50">
                                    <label class="checkbox-wrap checkbox-primary">
                                        Beni Hatırla
                                        <input type="checkbox" checked>
                                        <span class="checkmark"></span>
                                    </label>
                                </div>
                                <div class="w-50 text-md-right">
                                    <a href="#" style="color: #fff">Şifreyi Unuttum</a>
                                </div>
                            </div>
                            if (ViewBag.ErrorMessage != null)
                            {
                                <div class="text-center" style="margin-bottom:15px">
                                    <a class="text-gray-dark">
                                        @ViewBag.ErrorMessage
                                    </a>
                                </div>
                            }
                        }
                        <h3 class="text-center" style="color: red">@ViewBag.error</h3>
                    </div>
                    <div class="w-100 text-center mt-4 text">
                       <h3>Ben Robot Değilim</h3>
                    </div>
                    <div class="w-100 text-center mt-4 text">
                        <a href="/Register/WriterRegister">Hesap Oluştur</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="~/AdminLTE-3.1.0/writer-login-form/js/jquery.min.js"></script>
    <script src="~/AdminLTE-3.1.0/writer-login-form/js/popper.js"></script>
    <script src="~/AdminLTE-3.1.0/writer-login-form/js/bootstrap.min.js"></script>
    <script src="~/AdminLTE-3.1.0/writer-login-form/js/main.js"></script>

</body>
</html>

