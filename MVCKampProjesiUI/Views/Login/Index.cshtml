
@{
    Layout = null;
}

<!doctype html>
<html lang="tr">
<head>
    <title>MVC Kamp Login</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link href="~/AdminLTE-3.1.0/login-form/css/style.css" rel="stylesheet" />

</head>
<body>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">MVC Proje Kampı Admin Girişi</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap py-5">
                        <div class="img d-flex align-items-center justify-content-center" style=" background-image: url('../../AdminLTE-3.1.0/dist/img/ahmetlogo.png'); "></div>
                        <h3 class="text-center mb-0">Hoş Geldiniz</h3>
                        @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                        {
                            <div class="form-group">
                                <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-user"></span></div>
                                <input type="text" class="form-control" name="AdminUserName" placeholder="Kullanıcı Adı" required>
                            </div>
                            <div class="form-group">
                                <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-lock"></span></div>
                                <input type="password" class="form-control" name="AdminPassword" placeholder="Şifre" required>
                            </div>
                            <div class="form-group d-md-flex">
                                <div class="w-100 text-md-right">
                                    <a href="#">Şifremi Unuttum</a>
                                </div>
                            </div>
                            if (ViewBag.ErrorMessage != null)
                            {
                                <div class="text-center" style="margin-bottom:15px">
                                    <a class="text-gray-dark">
                                        @ViewBag.ErrorMessage
                                    </a>
                                </div> }
                            <div class="form-group">
                                <button type="submit" class="btn form-control btn-primary rounded submit px-3">Giriş</button>
                            </div>
                        }
                        <h3 class="text-center" style="color: red">@ViewBag.error</h3>
                        <div class="w-100 text-center mt-4 text">
                            <a href="/Register/Index">Hesap Oluştur</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="~/AdminLTE-3.1.0/login-form/js/jquery.min.js"></script>
    <script src="~/AdminLTE-3.1.0/login-form/js/popper.js"></script>
    <script src="~/AdminLTE-3.1.0/login-form/js/bootstrap.min.js"></script>
    <script src="~/AdminLTE-3.1.0/login-form/js/main.js"></script>

</body>
</html>

