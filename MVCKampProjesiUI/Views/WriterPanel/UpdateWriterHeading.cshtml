@model EntityLayer.Concrete.Heading
@{
    ViewBag.Title = "UpdateWriterHeading";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h2>Başlık Güncelleme Sayfası</h2>
@using (Html.BeginForm("UpdateWriterHeading", "WriterPanel", FormMethod.Post))
{
    <div class="form-group">
        @Html.HiddenFor(x => x.HeadingId)
        @Html.HiddenFor(x => x.HeadingDate)
        @Html.HiddenFor(x => x.WriterId)

        @Html.Label("Başlık Adı")
        @Html.TextAreaFor(x => x.HeadingName, new { @class = "form-control" })
        <br />
        @Html.Label("Kategori Adı")
        @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.categoryValue, new { @class = "form-control" })
        <br /><br />
        <button class="btn btn-info">Güncelle</button>
    </div>
}

