
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>MVC Proje Kampı</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome Icons -->
    <link href="~/AdminLTE-3.1.0/plugins/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <!-- IonIcons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link href="~/AdminLTE-3.1.0/dist/css/adminlte.min.css" rel="stylesheet" />
    <!-- Ekko Lightbox -->
    <link href="~/AdminLTE-3.1.0/plugins/ekko-lightbox/ekko-lightbox.css" rel="stylesheet" />
    <!-- Summernot -->
    <link href="~/AdminLTE-3.1.0/plugins/summernote/summernote.css" rel="stylesheet" />
    <link href="~/AdminLTE-3.1.0/plugins/summernote/summernote-bs4.css" rel="stylesheet" />
    <!-- PagedList -->
    <link href="~/Content/PagedList.css" rel="stylesheet" />
</head>
<!--
`body` tag options:

  Apply one or more of the following classes to to the body tag
  to get the desired effect

  * sidebar-collapse
  * sidebar-mini
-->
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="#" class="brand-link">
                <img src="~/AdminLTE-3.1.0/dist/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light">Yazar Paneli</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="~/AdminLTE-3.1.0/dist/img/ahmetlogo.png" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        <a href="#" class="d-block">Ahmet ÖZER</a>
                    </div>
                </div>



                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <!-- Add icons to the links using the .nav-icon class
                        with font-awesome or any other icon font library -->
                        <li class="nav-item">
                            <a href="/WriterPanel/WriterProfile" class="nav-link">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>Profilim</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/WriterPanel/AllHeading" class="nav-link">
                                <i class="nav-icon fas fa-list-alt"></i>
                                <p>Tüm Başlıklar</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/WriterPanel/WriterHeading" class="nav-link">
                                <i class="nav-icon fas fa-th"></i>
                                <p>Başlıklarım</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/WriterPanelMessage/Inbox" class="nav-link">
                                <i class="nav-icon fas fa-edit"></i>
                                <p>Mesajlar </p>
                            </a>

                        </li>

                        <li class="nav-item">
                            <a href="/WriterPanelContent/WriterContent" class="nav-link">
                                <i class="nav-icon fas fa-calendar-alt"></i>
                                <p>Yazılarım</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Default/Headings/" class="nav-link">
                                <i class="nav-icon fas fa-book"></i>
                                <p>Siteye Git</p>
                            </a>

                        </li>
                        <li class="nav-item">
                            <a href="/Login/LogOut/" class="nav-link">
                                <i class="nav-icon fas fa-sign-out-alt"></i>
                                <p>Çıkış Yap</p>
                            </a>

                        </li>
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Main content -->
            <div class="content">

                @RenderBody()

                <!-- /.container-fluid -->
            </div>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <!-- Main Footer -->


    </div>
    <!-- ./wrapper -->
    <!-- REQUIRED SCRIPTS -->
    <!-- jQuery -->
    <script src="~/AdminLTE-3.1.0/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap -->
    <script src="~/AdminLTE-3.1.0/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE -->
    <script src="~/AdminLTE-3.1.0/dist/js/adminlte.js"></script>

    <!-- OPTIONAL SCRIPTS -->
    <script src="~/AdminLTE-3.1.0/plugins/chart.js/Chart.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/AdminLTE-3.1.0/dist/js/demo.js"></script>
    <!-- AdminLTE dashboard demo (This is only for demo purposes) -->
    <script src="~/AdminLTE-3.1.0/dist/js/pages/dashboard3.js"></script>
    <!-- jQuery UI -->
    <script src="~/AdminLTE-3.1.0/plugins/jquery-ui/jquery-ui.min.js"></script>
    <!-- Ekko Lightbox -->
    <script src="~/AdminLTE-3.1.0/plugins/ekko-lightbox/ekko-lightbox.min.js"></script>
    <!-- Filterizr-->
    <script src="~/AdminLTE-3.1.0/plugins/filterizr/jquery.filterizr.min.js"></script>
    <!-- Summernote -->
    <script src="~/AdminLTE-3.1.0/plugins/summernote/summernote.min.js"></script>
    <script src="~/AdminLTE-3.1.0/plugins/summernote/summernote-bs4.min.js"></script>
    <script src="~/AdminLTE-3.1.0/plugins/summernote/lang/summernote-tr-TR.min.js"></script>
    <!-- Page Script -->
    <script>
        $(function () {
            //Add text editor
            $('#compose-textarea').summernote({
                height: 250,                 // set editor height
                minHeight: null,             // set minimum height of editor
                maxHeight: null,             // set maximum height of editor
                focus: true,                  // set focus to editable area after initializing summernote
                lang: 'tr-TR' // default: 'en-US'
            });
        })</script>
    <script>
        $(function () {
            $(document).on('click', '[data-toggle="lightbox"]', function (event) {
                event.preventDefault();
                $(this).ekkoLightbox({
                    alwaysShowClose: true
                });
            });

            $('.filter-container').filterizr({ gutterPixels: 3 });
            $('.btn[data-filter]').on('click', function () {
                $('.btn[data-filter]').removeClass('active');
                $(this).addClass('active');
            });
        })</script>
</body>
</html>

