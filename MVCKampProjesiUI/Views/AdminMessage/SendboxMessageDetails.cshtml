@model EntityLayer.Concrete.Message
@{
    ViewBag.Title = "SendboxMessageDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3">
                @Html.Action("ContactPartial", "AdminContact")
            </div>
            <!-- /.col -->
            <div class="col-md-9">
                <div class="card card-primary card-outline">
                    <div class="card-header">
                        <h3 class="card-title">Gönderilen Mesaj Detayı</h3>
                        <div class="card-tools">
                            <a href="#" class="btn btn-tool" data-toggle="tooltip" title="Previous"><i class="fas fa-chevron-left"></i></a>
                            <a href="#" class="btn btn-tool" data-toggle="tooltip" title="Next"><i class="fas fa-chevron-right"></i></a>
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body p-0">
                        <div class="mailbox-read-info">
                            <h5>Konu: @Html.DisplayFor(x => x.MessageSubject)</h5>
                            <h6>
                                Alıcı: @Html.DisplayFor(x => x.MessageReceiverMail)
                                <span class="mailbox-read-time float-right">@Model.MessageDate.ToString("dd MMMM yyyy")</span>
                            </h6>
                        </div>

                        <div class="mailbox-read-message">
                            <p>@Html.DisplayFor(x => x.MessageContent)</p>
                        </div>
                        <!-- /.mailbox-read-message -->
                    </div>
                    <!-- /.card-footer -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
    </div>
    <!-- /.row -->
</section>